<%= link_to "Back", "/add_event", :class=>:button, :style => "display:block;"%>


<h1>Add Region</h1>
<div class="new_event">
<%= form_for @region do |f| %>
  <%= f.label 'Region Name', :style => "display:block;" %>
  <%= f.text_field :name %>  
  <p><%= f.submit "Add Region!", :class => :button %></p>
<% end %>
</div>