<link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz' rel='stylesheet' type='text/css' />

<h1>Add Event</h1>

<%= form_for @event do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description %>

Region (<a href="/add_region">Add Region</a>)
<select name="event[region_id]" id="event_region_id", class="select">
   <option value="">Select Region</option>
   <% @regions.each do |region| %>
      <option value="<%= region.id %>">
         <%= region.name %>
      </option>
   <% end %>
</select>

Type (<a href="/add_section">Add Type of Event</a>)
<div id="section_id_container">
   <select name="event[section_id]" id="event_section_id", class="select">
     
      <option value="">No Type Selected</option>
   </select>
</div>

<%= observe_field("event_region_id",
   :frequency => 0.25,
   :update => "section_id_container",
   :url => { :action => :add_event_region },
   :with => "'region_id='+value") %>

<p>  <%= f.submit "Add Event!", :class => :button%></p>
<% end %>